@model BlogResponseModel

@{
    ViewData["Title"] = "Blog";
    int count = 0;

    // int pageNo = Model.PageSetting.PageNo;
    // int pageSize = Model.PageSetting.PageSize;
    // int pageCount = Model.PageSetting.PageCount;

    // string GetLink(int pageNo, int pageSize)
    // {
    //     return $"/Blog/List?pageNo={pageNo}&pageSize={pageSize}";
    // }
}

<a href="/Blog/Create" class="btn btn-success">New</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Action</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <th scope="row">@(++count)</th>
                <th scope="row">
                    <a href="/Blog/Edit/@item.Blog_Id" class="btn btn-warning">Edit</a>
                    <a href="/Blog/Delete/@item.Blog_Id" class="btn btn-danger">Delete</a>
                </th>
                <td>@item.Blog_Title</td>
                <td>@item.Blog_Author</td>
                <td>@item.Blog_Content</td>
            </tr>
        }

    </tbody>
</table>
@await Html.PartialAsync("_PartialPagination", Model.PageSetting)
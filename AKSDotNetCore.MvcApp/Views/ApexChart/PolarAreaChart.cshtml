@model PolarAreaChartModel

@{
    List<int> _series = Model.Series;
}

<div id="chart"></div>

@section scripts{
    <script>
        let _series = @(Html.Raw(JsonConvert.SerializeObject(_series)));

        var options = {
            series: _series,
            chart: {
                type: 'polarArea',
            },
            stroke: {
                colors: ['#fff']
            },
            fill: {
                opacity: 0.5
            },
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();


    </script>
}


@model List<BlogDataModel>

@{
    ViewData["Title"] = "RestClient";
    int count = 0;
}

<a href="/BlogRestClient/Create" class="btn btn-success">New</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Action</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(++count)</th>
                <th scope="row">
                    <a href="/BlogRestClient/Edit/@item.Blog_Id" class="btn btn-warning">Edit</a>
                    <a href="/BlogRestClient/Delete/@item.Blog_Id" class="btn btn-danger">Delete</a>
                </th>
                <td>@item.Blog_Title</td>
                <td>@item.Blog_Author</td>
                <td>@item.Blog_Content</td>
            </tr>
        }

    </tbody>
</table>
